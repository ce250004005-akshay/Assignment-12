#include <iostream>
#include <string>
using namespace std;
class Car{
private:
     string brand;
     float price;
     
public:
     Car( string a, float b){
         brand=a;
         price=b;
         
     }
     void displaydata(){
         cout<<"The brand of car is "<< brand<<" and it's price is "<<price<<endl;
     }
     

};
int main(){
    Car car1("Mclaren",1000000);
    Car car2("Porche",5000000);
    car1.displaydata();
    car2.displaydata();
    
}
