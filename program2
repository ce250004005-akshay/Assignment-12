
#include <iostream>
using namespace std;


class Complex {
private:
    float real;
    float imag;

public:
   
    Complex() {
        real = 0;
        imag = 0;
    }

  
    Complex(float r) {
        real = r;
        imag = 0;
    }

    
    Complex(float r, float i) {
        real = r;
        imag = i;
    }

    
    void display() {
        if (imag >= 0)
            cout << real << " + " << imag << "i" << endl;
        else
            cout << real << " - " << -imag << "i" << endl;
    }
};

int main() {

    Complex c1;

   
    Complex c2(5);

    Complex c3(3, -4);

    cout << "Complex number 1 (default constructor): ";
    c1.display();

    cout << "Complex number 2 (real part only): ";
    c2.display();

    cout << "Complex number 3 (real and imaginary parts): ";
    c3.display();

    return 0;
